<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>Login</h2>
      <form {{action "authenticate" on="submit"}}>
        <div class="form-group">
          <label for="identification">Username or Email</label>
          {{input value=identification placeholder="user@example.com" class="form-control"}}
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          {{input value=password type="password" class="form-control"}}
        </div>
        <button class="btn btn-default" type="submit">Login</button>
      </form>
    </div>
  </div>
</div>

{{outlet}}
