<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>Signup</h2>
      <form {{action "signup" on="submit"}}>
        <div class="form-group">
          <label for="signup-email">Email Address</label>
          {{input value=email class="form-control" id="signup-email"}}
        </div>
        <div class="form-group">
          <label for="signup-name">Name</label>
          {{input value=name class="form-control" id="signup-name"}}
        </div>
        <div class="form-group">
          <label for="signup-password">Password</label>
          {{input type="password" value=password class="form-control" id="signup-password"}}
        </div>
        <button type="submit" class="btn btn-default" id="signup-submit">Submit</button>
      </form>
    </div>
  </div>
</div>

{{outlet}}
